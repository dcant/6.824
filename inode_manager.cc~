#include "inode_manager.h"

// disk layer -----------------------------------------

disk::disk()
{
  bzero(blocks, sizeof(blocks));
}

void
disk::read_block(blockid_t id, char *buf)
{
  if (id < 0 || id >= BLOCK_NUM || buf == NULL)
    return;

  memcpy(buf, blocks[id], BLOCK_SIZE);
}

void
disk::write_block(blockid_t id, const char *buf)
{
  if (id < 0 || id >= BLOCK_NUM || buf == NULL)
    return;

  memcpy(blocks[id], buf, BLOCK_SIZE);
}

// block layer -----------------------------------------

// Allocate a free disk block.
blockid_t
block_manager::alloc_block()
{
    //空出|<-sb->|<-free block bitmap->|<-inode table->这些位置
    int skip = 1 + 1 + sb.nblocks / BPB + INODE_NUM / IPB;
    //遍历所有bitmap位
    for(int i=0; i<sb.nblocks; i+=BPB){
        char buf[BLOCK_SIZE];
        read_block(BBLOCK(i), buf);
        //遍历该block所有位
        for(int j=0; j<BPB; j++){
            if(i + j < skip)continue;
            int test = 1 << (j%8);                      //测试位
            if((buf[j/8] & test) == 0){                 //得到空闲位
                buf[j/8] |= (test);                     //标记使用
                //写回bitmap
                write_block(BBLOCK(i), buf);
                //新分配数据初始化
                char none[BLOCK_SIZE];
                memset(none, 0, sizeof(char) * BLOCK_SIZE);
                write_block(i + j, none);
                //返回bnum
                return i + j;
            }
        }
    }
    //无可用块空间
    printf("\tbm: can't alloc block! \n");
    exit(0);
}

void
block_manager::free_block(uint32_t id)
{
    //得到对应bitmap的block数据
    uint32_t block_num = BBLOCK(id);
    char buf[BLOCK_SIZE];
    read_block(block_num, buf);
    //计算相应位偏移
    uint32_t bit_num = id - (block_num - BBLOCK(0)) * BPB;
    char test = 1 << (bit_num%8);                       //测试位
    if(buf[bit_num/8]&test == 0){
        printf("\tbm: this block has been free! \n");
        return;
    }
    buf[bit_num/8] &= (~test);                          //标记空闲
    //写回bitmap
    write_block(block_num, buf);
  return;
}

// The layout of disk should be like this:
// |<-sb->|<-free block bitmap->|<-inode table->|<-data->|
block_manager::block_manager()
{
  d = new disk();

  // format the disk
  sb.size = BLOCK_SIZE * BLOCK_NUM;
  sb.nblocks = BLOCK_NUM;
  sb.ninodes = INODE_NUM;

}

void
block_manager::read_block(uint32_t id, char *buf)
{
  d->read_block(id, buf);
}

void
block_manager::write_block(uint32_t id, const char *buf)
{
  d->write_block(id, buf);
}

// inode layer -----------------------------------------
inode_manager::inode_manager()
{
  bm = new block_manager();
  uint32_t root_dir = alloc_inode(extent_protocol::T_DIR);
  if (root_dir != 1) {
    printf("\tim: error! alloc first inode %d, should be 1\n", root_dir);
    exit(0);
  }
}


/* Create a new file.
 * Return its inum. */
uint32_t
inode_manager::alloc_inode(uint32_t type)
{
   struct inode *ino_disk;
   //遍历所有inode
   for(int i=1; i<bm->sb.ninodes; i++){
        //得到inode块数据
        char buf[BLOCK_SIZE];
        bm->read_block(IBLOCK(i, bm->sb.nblocks), buf);
        //解析成inode结构
        ino_disk = (struct inode*)buf + i%IPB;
        if(ino_disk->type == 0){                            //该inode空闲
            memset(ino_disk, 0, sizeof(struct inode));
            ino_disk->type = type;
            ino_disk->mtime = time(NULL);
            //写回inode的block
            bm->write_block(IBLOCK(i, bm->sb.nblocks), buf);
            return i;
        }
   }
   //无可用块空间
   printf("\tim: can't alloc inode! \n");
   exit(0);
}

void
inode_manager::free_inode(uint32_t inum)
{
    //得到inode块数据并解析成inode结构
   struct inode *ino_disk;
   char buf[BLOCK_SIZE];
   bm->read_block(IBLOCK(inum, bm->sb.nblocks), buf);
   ino_disk = (struct inode*)buf + inum%IPB;
   if(ino_disk->type == 0){
        printf("\tim: this inode has been free! \n");
        return;
   }
   //置空并写回inode的block
   memset(ino_disk, 0, sizeof(struct inode));
   bm->write_block(IBLOCK(inum, bm->sb.nblocks), buf);
}


/* Return an inode structure by inum, NULL otherwise.
 * Caller should release the memory. */
struct inode*
inode_manager::get_inode(uint32_t inum)
{
  struct inode *ino, *ino_disk;
  char buf[BLOCK_SIZE];

  printf("\tim: get_inode %d\n", inum);

  if (inum < 0 || inum >= INODE_NUM) {
    printf("\tim: inum out of range\n");
    return NULL;
  }

  bm->read_block(IBLOCK(inum, bm->sb.nblocks), buf);
  // printf("%s:%d\n", __FILE__, __LINE__);

  ino_disk = (struct inode*)buf + inum%IPB;
  if (ino_disk->type == 0) {
    printf("\tim: inode not exist\n");
    return NULL;
  }

  ino = (struct inode*)malloc(sizeof(struct inode));
  *ino = *ino_disk;

  return ino;
}

void
inode_manager::put_inode(uint32_t inum, struct inode *ino)
{
  char buf[BLOCK_SIZE];
  struct inode *ino_disk;

  printf("\tim: put_inode %d\n", inum);
  if (ino == NULL)
    return;

  bm->read_block(IBLOCK(inum, bm->sb.nblocks), buf);
  ino_disk = (struct inode*)buf + inum%IPB;
  *ino_disk = *ino;
  ino_disk->ctime = time(NULL);
  bm->write_block(IBLOCK(inum, bm->sb.nblocks), buf);
}

#define MIN(a,b) ((a)<(b) ? (a) : (b))

/* Get all the data of a file by inum.
 * Return alloced data, should be freed by caller. */
void
inode_manager::read_file(uint32_t inum, char **buf_out, int *size)
{
   struct inode *ino = get_inode(inum);
   ino->atime = time(NULL);
   put_inode(inum, ino);
   if(ino == NULL){
        printf("\tim: the file is not exist!\n");
        exit(0);
   }
   *size = ino->size;
   int tmp_size = *size;                    //用于记录当前还剩多少size未写
   //开辟临时返回数据并分配内存 同时保存其头指针
   char *_buf_out = (char*)malloc(ino->size);
   char *_buf_out_head = _buf_out;
   for(uint32_t i=0; i<NDIRECT; i++){
        //代表读完毕
        if(tmp_size <= 0){
            *buf_out = _buf_out_head;
            return;
        }
        //读数据
        char tmp_buf[BLOCK_SIZE];
        bm->read_block(ino->blocks[i], tmp_buf);
        if(tmp_size >= BLOCK_SIZE)
            memcpy(_buf_out, tmp_buf, BLOCK_SIZE);
        else memcpy(_buf_out, tmp_buf, tmp_size % BLOCK_SIZE);
        _buf_out += BLOCK_SIZE;
        tmp_size -= BLOCK_SIZE;
   }
   //代表读完毕
   if(tmp_size <= 0){
        *buf_out = _buf_out_head;
        return;
   }
   //读间接引用数据
   char tmp_buf[BLOCK_SIZE];
   bm->read_block(ino->blocks[NDIRECT], tmp_buf);
   //解析间接引用块数据
   for(uint32_t i=0; i<BLOCK_SIZE; i++){
        //代表读完毕
        if(tmp_size <= 0){
            *buf_out = _buf_out_head;
            return;
        }
        uint *p = (uint*)tmp_buf + i;
        char buf[BLOCK_SIZE];
        bm->read_block(*p, buf);
        if(tmp_size >= BLOCK_SIZE)
            memcpy(_buf_out, buf, BLOCK_SIZE);
        else memcpy(_buf_out, buf, tmp_size % BLOCK_SIZE);
        _buf_out += BLOCK_SIZE;
        tmp_size -= BLOCK_SIZE;
   }
   *buf_out = _buf_out_head;
   return;
}

void
inode_manager::write_file(uint32_t inum, const char *buf, int size)
{
   struct inode *ino = get_inode(inum);
   if(ino == NULL){
        printf("\tim: the file is not exist!\n");
        exit(0);
   }
   if(size > MAXFILE * BLOCK_SIZE){
        printf("\tim: the file size is too large!\n");
        exit(0);
   }

   int tmp_size = size;                         //用于记录当前还剩多少size未写
   //处理直接引用块
   //遍历所有直接引用块
   for(uint32_t i=0; i<NDIRECT; i++){
        //如果已经write完毕
        if(tmp_size <= 0){
            //用于清空之前写过过多数据
            if(ino->blocks[i] != 0){
                bm->free_block(ino->blocks[i]);
                ino->blocks[i] = 0;
                continue;
            }else {
                break;
            }
        }
        //还没有写完
        if(ino->blocks[i] == 0){
            ino->blocks[i] = bm->alloc_block();
        }
        bm->write_block(ino->blocks[i], buf);
        tmp_size -= BLOCK_SIZE;
        buf += BLOCK_SIZE;
   }
   /*   处理间接引用块
        分为3种情况
        1：当前已经写完，且间接引用为空，这种情况不需要处理
        2：当前已经写完，但间接引用有数据需要清空
        3：数据没有写完，需要写入间接引用中
   */
   bool is_write_over = (tmp_size <= 0) ? 1 : 0;    //标记当前是否写完
   if(tmp_size <= 0 && ino->blocks[NDIRECT] == 0){
        //情况1，不需要处理
   }else {
        //情况2，3
        if(ino->blocks[NDIRECT] == 0){
            ino->blocks[NDIRECT] = bm->alloc_block();
        }
        //读出间接引用块数据
        char tmp_buf[BLOCK_SIZE];
        bm->read_block(ino->blocks[NDIRECT], tmp_buf);
        //解析间接引用块数据
        for(uint32_t i=0; i<BLOCK_SIZE; i++){
            uint *p = (uint*)tmp_buf + i;
            //已经write完毕
            if(tmp_size <= 0){
                if(*p != 0){
                    bm->free_block(*p);
                    *p = 0;
                    continue;
                }else {
                    break;
                }
            }
            //还没有写完毕
            if(*p == 0){
                *p = bm->alloc_block();
            }
            bm->write_block(*p, buf);
            tmp_size -= BLOCK_SIZE;
            buf += BLOCK_SIZE;
        }
        //针对情况2，需要释放间接引用块block和复位间接引用指针
        if(is_write_over && ino->blocks[NDIRECT] != 0){
            bm->free_block(ino->blocks[NDIRECT]);
            ino->blocks[NDIRECT] = 0;
        }
        //针对情况3，写回间接引用
        if(ino->blocks[NDIRECT] != 0)bm->write_block(ino->blocks[NDIRECT], tmp_buf);
   }
   //赋值写入数据size和保存ino更改
   ino->size = size;
   ino->mtime = time(NULL);
   put_inode(inum, ino);
  return;
}

void
inode_manager::getattr(uint32_t inum, extent_protocol::attr &a)
{
    //得到inode块数据并解析成inode结构
   struct inode *ino_disk;
   char buf[BLOCK_SIZE];
   bm->read_block(IBLOCK(inum, bm->sb.nblocks), buf);
   ino_disk = (struct inode*)buf + inum%IPB;
   //返回attr
   a.type = ino_disk->type;
   a.atime = ino_disk->atime;
   a.ctime = ino_disk->ctime;
   a.mtime = ino_disk->mtime;
   a.size = ino_disk->size;
   return;
}

void
inode_manager::setattr(uint32_t inum, extent_protocol::attr a)
{
    //得到inode块数据并解析成inode结构
   struct inode *ino_disk;
   char buf[BLOCK_SIZE];
   bm->read_block(IBLOCK(inum, bm->sb.nblocks), buf);
   ino_disk = (struct inode*)buf + inum%IPB;
   //返回attr
   ino_disk->type = a.type;
   ino_disk->atime = a.atime;
   ino_disk->ctime = a.ctime;
   ino_disk->mtime = a.mtime;
   //ino_disk->size = a.size;
   return;
}

void
inode_manager::remove_file(uint32_t inum)
{
    struct inode *ino = get_inode(inum);
    if(ino == NULL){
        printf("\tim: the file is not exist!\n");
        exit(0);
    }
    //释放block
    //处理直接引用
    for(uint32_t i=0; i<NDIRECT; i++){
        if(ino->blocks[i] == 0)break;
        bm->free_block(ino->blocks[i]);
    }
    //处理最后一位间接引用
    if(ino->blocks[NDIRECT] != 0){
        char tmp_buf[BLOCK_SIZE];
        bm->read_block(ino->blocks[NDIRECT], tmp_buf);
        //解析间接引用块数据
        for(uint32_t i=0; i<BLOCK_SIZE; i++){
            uint *p = (uint*)tmp_buf + i;
            if(*p == 0)break;
            bm->free_block(*p);
        }
        //释放间接引用块
        bm->free_block(ino->blocks[NDIRECT]);
    }
    //释放inode
    free_inode(inum);
  return;
}
